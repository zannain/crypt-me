$('.modal-body').html("<%= j render 'form', url: new_alert_path %>");
$('.modal-title').html("Create an Alert");
$(".modal-btn").html("Create Alert");
setSliderValues();
var sliderMin = $(".alert-slider").slider("values",0);
var sliderMax= $(".alert-slider").slider("values",1);

$(".alert-min--badge" ).html(sliderMin);  // update min-alert badge
$(".alert-max--badge" ).html(sliderMax);  // update max-aert badge
$(".alert-min--badge" ).val(sliderMin);  // update min-alert badge
$(".alert-max--badge" ).val(sliderMax);  // update max-aert badge

$(".alert-min" ).val(calculateRange(sliderMin, $(".alert-value").val())); // calculate & update alert-min input
$(".alert-max").val(calculateRange(sliderMax, $(".alert-value").val()));  // calculate & update alert-max input
$('#datepicker').datepicker({dateFormat: "DD, MM d, yy"});
$('.modal').modal();



