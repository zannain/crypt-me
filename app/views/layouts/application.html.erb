<% provide(:title) %>
<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | CryptMe</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Monoton|Raleway+Dots+family=Marcellus+SC" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Monoton|Raleway+Dots|family=Sacramento" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cormorant+Unicase|Lato:300" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta http-equiv="Content-type" content="text/html;charset=UTF-8">
    <meta name="generator" content="thesitewizard.com's Layout Wizard 1.1.1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <div class="container">
    <%= render 'shared/nav' %>
    <%= render 'shared/flash' %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
