$(".modal-btn").html("Update Alert");
$('.modal-body').html("<%= j render 'form' %>");
$('.modal-title').html('Edit <%= j @alert.alert_currency %> Alert');
$('.alert-currency').val("<%= j @alert.alert_currency %>");
$('.alert-value').val("<%= j @alert.get_value %>");
setSliderValues();
var sliderMin = $(".alert-slider").slider("values",0);
var sliderMax= $(".alert-slider").slider("values",1);
$("#alert-id").val("<%= j @alert.alert_id %>");
$(".alert-min--badge" ).html(sliderMin);
$(".alert-max--badge" ).html(sliderMax);
$(".alert-min--badge" ).val(sliderMin);  // update min-alert badge FIELD
$(".alert-max--badge" ).val(sliderMax);  // update max-aert badge FIELD
$(".alert-min" ).val(calculateRange(sliderMin, $(".alert-value").val())); // calculate & update alert-min input
$(".alert-max").val(calculateRange(sliderMax, $(".alert-value").val()));  // calculate & update alert-max input

$('#datepicker').val("<%= @alert.alert_expiration.strftime("%A, %B %e %Y") %>")
$('#datepicker').datepicker({dateFormat: "DD, MM d, yy"});
$('.modal').modal();

